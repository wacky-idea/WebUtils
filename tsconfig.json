{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "target": "ES6",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "lib": [
      "es2017",
      "DOM",
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "node_modules/@types/**/*"
  ],
  "path": {
    "@/*": [
      "src/*"
    ]
  }
}